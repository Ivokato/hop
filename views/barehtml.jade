- if(!isAjax)
  doctype html
  html
    head
      title= info.title
      link(href='/css/basic.css', rel='stylesheet', data-isdefault="true")
      block header
    body
      block layout
      #defaultScripts
        span(data-backup="script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')")
        script(src='/js/lib/jquery-1.8.3.min.js')
        script(src='/socket.io/socket.io.js')
        script(src='/js/basic.js')
      #scripts
        block footer
- else
  #data
    title= info.title
    #styles
      block header
    #content
      block content
    #scripts
      block footer